<p id="notice"><%= notice %></p>

<div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Meme World
                    <small>The one place for the best memes</small>
                    <% if(!user_signed_in?) %>
                    <%= link_to 'Register', new_user_registration_path, class: "btn btn-primary" %>
                    <%= link_to 'Log In', new_user_session_path, class: "btn btn-primary" %>
                    <% else %>
                    <small>You are logged in as <%= current_user.email %></small>
                    <% end %>
                </h1>
                <center><%= link_to 'Post New Meme', new_meme_path, class: "btn btn-primary" %></center>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row">
          <% @memes.each do |meme| %>
            <div class="col-md-12" style="margin: 20px 20px;">
              <center><img src="<%= meme.img %>"></center>
            </div>
          <% end %>
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>

<br>
